{
    "AWSEBDockerrunVersion": 1,
    "containerDefinitions": [
       {
            "name": "robot",
            "image": "vipinjain/robot-docker",
            "hostname": "robot",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 8000,
                    "containerPort": 8000
                }
            ],
            "memory": 128,
            "Entrypoint": ["run-tests-in-virtual-screen.sh"],
            "Command": ["-e","BROWSER=chrome","--shm-size=1g" ]
        }
    ]
}